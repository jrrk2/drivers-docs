---
import { getCollection } from "astro:content";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import yaml from "js-yaml";
import { readFileSync, existsSync } from "node:fs";
import path from "node:path";
import { slugify } from "../utils/slugify";

const allDrivers = await getCollection("docs");

// Build category map with display names
const categoryMap = new Map();

for (const driver of allDrivers) {
  const driverId = driver.id;
  const driverParts = driverId.split("/");

  if (driverParts.length >= 3) {
    const categorySlug = slugify(driverParts[0]);

    // Get category display name from YAML
    const yamlPath = path.resolve(
      process.cwd(),
      `src/content/docs/${driverId.replace(/\.md$/, ".yaml")}`,
    );

    if (existsSync(yamlPath)) {
      try {
        const fileContents = readFileSync(yamlPath, "utf8");
        const driverInfo = yaml.load(fileContents) as Record<string, any>;
        if (driverInfo?.category_name) {
          categoryMap.set(categorySlug, driverInfo.category_name as string);
        }
      } catch (e) {
        console.error(`Error reading YAML for ${driverId}:`, e);
      }
    }

    // Fallback to driver.data.category or capitalize slug
    if (!categoryMap.has(categorySlug)) {
      const displayName =
        driver.data.category ||
        categorySlug.charAt(0).toUpperCase() + categorySlug.slice(1);
      categoryMap.set(categorySlug, displayName);
    }
  }
}

const categories = Array.from(categoryMap.entries());
---

<StarlightPage
  frontmatter={{
    title: "Driver Categories",
    template: "splash",
  }}
>
  <div class="category-grid">
    {
      categories.map(([slug, name]) => (
        <a href={`/${slug}`} class="category-box">
          <img
            src={`/images/categories/${slug}.webp`}
            alt={`${name} category thumbnail`}
            class="category-thumbnail"
          />
          <h2>{name}</h2>
        </a>
      ))
    }
  </div>
</StarlightPage>

<style>
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .category-box {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 0.5rem;
    background-color: var(--sl-color-gray-6);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: inherit;
    box-shadow: var(--sl-shadow-sm);
    transition: all 0.2s ease-in-out;
  }

  .category-box:hover {
    background-color: var(--sl-color-gray-5);
    transform: translateY(-5px);
    box-shadow: var(--sl-shadow-md);
  }

  .category-thumbnail {
    width: 100px;
    height: 100px;
    object-fit: contain;
    margin-bottom: 0.5rem;
  }

  .category-box h2 {
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
    color: var(--sl-color-white);
    font-size: 1.5rem;
  }

  .category-box p {
    font-size: 1rem;
    color: var(--sl-color-gray-2);
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }
</style>
